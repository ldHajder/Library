{% extends 'LibraryMainBundle::layout.html.twig' %}

{% block content %}
    {% for one in card %}
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">{{ one.book.name }}</h2>
            </div>
            <div class="col-md-6">
                <p>Informacje o wypozyczonej ksiazce:</p>
                <ul>
                    <li><strong>Tytul: {{ one.book.name }}</strong></li>
                    <li>Autor: {{ one.book.author }}</li>
                    <li>Wydawnictwo: {{ one.book.publishing }}</li>
                    <li>Rok wydania: {{ one.book.year }}</li>
                    <li>Data wypozyczenia:{{ one.date.format('Y-m-d H:i:s') }}</li>
                </ul>
                <p>{{ one.book.description }}</p>
                {% if one.returnDate is null %}
                    <a href="{{ path('return_book', {'cardId': one.id}) }}" class="btn btn-default">Oddaj ksiazke</a>
                {% else %}
                    <li><strong>Ksiazke oddano: {{ one.returnDate.format('Y-m-d H:i:s') }}</strong></li>
                {% endif %}
            </div>
            <div class="col-md-6">
                <img class="img-responsive" src="{{ asset(one.book.getWebPath) }}" alt="">
            </div>
        </div>
    {% endfor %}
{% endblock %}
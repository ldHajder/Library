{% extends 'LibraryMainBundle:Book:showBooks.html.twig' %}

{% block paginator %}
    <li>
        <a href="{{ path('show_search_result', {'page' : 1}) }}">&laquo;</a>
    </li>
    {% for i in page.paginator %}
        {% if i == page.pageNum %}
            <li class="active">
                <a href="{{ path('show_search_result', {'page': i}) }}">{{ i }}</a>
            </li>
        {% else %}
            <li>
                <a href="{{ path('show_search_result', {'page': i}) }}">{{ i }}</a>
            </li>
        {% endif %}
    {% endfor %}
    <li>
        <a href=" {{ path('show_search_result', {'page': page.maxPage}) }} ">&raquo;</a>
    </li>
{% endblock %}